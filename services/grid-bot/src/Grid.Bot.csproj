<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <NoWarn>$(NoWarn);4014</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <Configurations>debug;release</Configurations>
    <OutputType>Exe</OutputType>

    <AutoGenerateBindingRedirects>True</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Primary executable for the MFDLABS grid-bot.</Description>
    <DefineConstants>$(DefineConstants);WE_LOVE_EM_SLASH_COMMANDS;DISCORD_SHARDING_ENABLED</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\lib\commands\Shared.Commands.csproj" />
    <ProjectReference Include="..\lib\events\Shared.Events.csproj" />
    <ProjectReference Include="..\lib\settings\Shared.Settings.csproj" />
    <ProjectReference Include="..\lib\utility\Shared.Utility.csproj" />
  </ItemGroup>

  <ItemGroup Label="CustomPackages" Condition=" '$(LocalBuild)' != 'true' ">
    <PackageReference Include="mfdlabs.Random" Version="1.0.4" />
    <PackageReference Include="mfdlabs.Redis" Version="1.0.4" />
    <PackageReference Include="mfdlabs.Configuration.Core" Version="1.0.4" />
  </ItemGroup>

  <ItemGroup Label="CustomPackages" Condition=" '$(LocalBuild)' == 'true' ">
    <ProjectReference Include="$(RootDirectory)lib/src/random/random/Random.csproj" />
    <ProjectReference Include="$(RootDirectory)lib/src/redis/redis/Redis.csproj" />
    <ProjectReference Include="$(RootDirectory)lib/src/configuration/core/Configuration.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />

    <PackageReference Include="Discord.Net.WebSocket" Version="3.11.0" />
    <PackageReference Include="Discord.Net.Commands" Version="3.11.0" />
    <PackageReference Include="Discord.Net.Interactions" Version="3.11.0" />
    <PackageReference Include="prometheus-net.AspNetCore" Version="8.0.1" />
    <PackageReference Include="Grpc.AspNetCore" Version="2.62.0" />
  </ItemGroup>


  <!-- Linux targets -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(OS)' == 'Unix'">
    <Exec Command="cp $(RootDirectory)LICENSE $(OutDir)" />
    <Exec Command="cp $(RootDirectory)README.md $(OutDir)" />
  </Target>

  <Target Name="PostPublish" AfterTargets="Publish" Condition="'$(OS)' == 'Unix'">
    <Exec Command="cp $(RootDirectory)LICENSE $(PublishDir)" />
    <Exec Command="cp $(RootDirectory)README.md $(PublishDir)" />
  </Target>

  <!-- Windows targets -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(OS)' == 'Windows_NT'">
    <Exec Command="xcopy /y $(RootDirectory)LICENSE $(OutDir)" />
    <Exec Command="xcopy /y $(RootDirectory)README.md $(OutDir)" />
  </Target>

  <Target Name="PostPublish" AfterTargets="Publish" Condition="'$(OS)' == 'Windows_NT'">
    <Exec Command="xcopy /y $(RootDirectory)LICENSE $(PublishDir)" />
    <Exec Command="xcopy /y $(RootDirectory)README.md $(PublishDir)" />
  </Target>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
