<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <NoWarn>$(NoWarn);4014</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <Configurations>debug;release</Configurations>
    <OutputType>Exe</OutputType>

    <AutoGenerateBindingRedirects>True</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <PropertyGroup>
    <Description>Recovery executable for the MFDLABS grid-bot.</Description>
  </PropertyGroup>

  <ItemGroup Label="PrivatePackages" Condition=" '$(LocalBuild)' != 'true' ">
    <PackageReference Include="Configuration" Version="1.0.7" />
    <PackageReference Include="Logging" Version="1.0.4" />
    <PackageReference Include="Networking" Version="1.0.5" />
  </ItemGroup>

  <ItemGroup Label="PrivatePackages" Condition=" '$(LocalBuild)' == 'true' ">
    <ProjectReference Include="../../lib/src/configuration/configuration/Configuration.csproj" />
    <ProjectReference Include="..\..\lib\src\logging\logging\Logging.csproj" />
    <ProjectReference Include="../../lib/src/networking/networking/Networking.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />

    <PackageReference Include="Discord.Net.WebSocket" Version="3.11.0" />
    <PackageReference Include="Discord.Net.Commands" Version="3.11.0" />
    <PackageReference Include="Discord.Net.Interactions" Version="3.11.0" />
    <PackageReference Include="prometheus-net.AspNetCore" Version="8.0.1" />
  </ItemGroup>

  <!-- Protobuf -->
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.23.4" />
    <PackageReference Include="Grpc.Core" Version="2.46.6" />
    <PackageReference Include="Grpc.Net.Client" Version="2.55.0" />
    <PackageReference Include="Grpc.Tools" Version="2.56.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="$(RootDirectory)proto\grid_bot.proto" GrpcServices="Client" />
  </ItemGroup>

  <!-- Linux targets -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(OS)' == 'Unix'">
    <Exec Command="cp $(RootDirectory)LICENSE $(OutDir)" />
    <Exec Command="cp $(RootDirectory)README.md $(OutDir)" />
  </Target>

  <Target Name="PostPublish" AfterTargets="Publish" Condition="'$(OS)' == 'Unix'">
    <Exec Command="cp $(RootDirectory)LICENSE $(PublishDir)" />
    <Exec Command="cp $(RootDirectory)README.md $(PublishDir)" />
  </Target>

  <!-- Windows targets -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent" Condition="'$(OS)' == 'Windows_NT'">
    <Exec Command="xcopy /y $(RootDirectory)LICENSE $(OutDir)" />
    <Exec Command="xcopy /y $(RootDirectory)README.md $(OutDir)" />
  </Target>

  <Target Name="PostPublish" AfterTargets="Publish" Condition="'$(OS)' == 'Windows_NT'">
    <Exec Command="xcopy /y $(RootDirectory)LICENSE $(PublishDir)" />
    <Exec Command="xcopy /y $(RootDirectory)README.md $(PublishDir)" />
  </Target>

</Project>
